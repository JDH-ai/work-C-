#include <iostream>
using namespace std;

//Task 1

int main() {
    int x = 10;
    int* p = &x;
    
    (*p)++;
    
    cout << "Адрес переменной: " << &x << endl;
    cout << "Значение переменной: " << x << endl;
    cout << "Значение через указатель: " << *p << endl;
    
    return 0;
    
}

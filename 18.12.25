#include <iostream>
using namespace std;

//Task 1

int main() {
    int x = 10;
    int* p = &x;
    
    (*p)++;
    
    std::cout << "Адрес переменной: " << &x << std::endl;
    std::cout << "Значение переменной: " << x << std::endl;
    std::cout << "Значение через указатель: " << *p << std::endl;
    
    return 0;
    
}

//Task 2

int main() {
    double repair = 300000;
    double* p = &repair;
    
    *p = 500000;
    
    std::cout << "Обычный способ: " << &repair << std::endl;
    std::cout << "Способ через указатель: " << *p << std::endl;
    
    return 0;
    
}

//Task 3

int main() {
    int revenue[5] = {1000, 1100, 1200, 1300, 1400};
    int* p = revenue;
    
    int summ = 0;
    
    std::cout << "Все выручки: ";
    
    for (int i = 0; i < 5; i++) {
        std::cout << *p << " ";
        summ += *p;
        p++;
    }
    
    std::cout << std::endl;
    std::cout << "Сумма всех значений: " << summ << std::endl;
    
    return 0;
    
}

//Task 4

int main() {
    int training[10] = {0};
    int* p = training;
    
    *(p + 7) = 99;
    
    std::cout << "Тренировочные результаты: " << std::endl;
    
    for (int i = 0; i < 10; i++) {
        std::cout << *(p + i) << " ";
    }
    
    std::cout << std::endl;
    
    return 0;
    
}

//Task 5

int main() {
    int rounds[6] = {5, 8, 10, 12, 15, 20};
    int* p = rounds;
    
    *(p + 1) = 40;
    
    std::cout << "Очки за все раунды: " << std::endl;
    
    for (int i = 0; i < 6; i++) {
        std::cout << rounds[i] << " ";
    }
    
    std::cout << std::endl;
    
    std::cout << "Измененный элемент по индексу: " << rounds[1] << std::endl;
    std::cout << "Измененный элемент через разыменование смещенного указателя: " << *(p + 1) << std::endl;

    return 0;
    
}


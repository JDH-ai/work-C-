#include <iostream>
using namespace std;

//Task 1

int totalcost(int price, int quantity) {
        return price * quantity;
        
}

int main() {
    int price = 500;
    int quantity = 5;
       
    std::cout << "Итоговая стоимость: " << totalcost(price, quantity) << std::endl;
    std::cout << "Исходная цена: " << price << std::endl;
    std::cout << "Исходное количество: " << quantity << std::endl;
    
    return 0;
    
}

//Task 2

void hill(int &health, int treatment) {
    health += treatment;
}

int main() {
    int health = 35;
    
    std::cout << "Здоровье в игре до полученного лечения: " << health << std::endl;
    
    hill(health, 15);
    
    std::cout << "Здоровье в игре после получения лечения: " << health << std::endl;
    
    return 0;
    
}


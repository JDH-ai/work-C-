int main() {
    int n;
    
    cout << "Введите количество элементов, что находится в массиве" << endl;
    
    cin >> n;
    
    int a[50];
    
    cout << "Введите " << n << " целые числа: " << endl;
    
    for (int i = 0; i < n; i++) {
        cin >> a[i];
        
    }
    
    int maxlength = 0;
    int maxstart = 0;
    int currentlength = 1;
    int currentstart = 0;
    int previoussign = 0;
    
    for (int i = 0; i < n - 1; i++) {
        int diff = a[i + 1] - a[i];
        
        if (diff == 0) {
            currentlength = 1;
            currentstart = i + 1;
            previoussign = 0;
        } else {
            int sign;
            if (diff > 0) {
                sign = 1;
            } else {
                sign = -1;
                
            }
            
            if (previoussign == 0 || sign != previoussign) {
                currentlength++;
                previoussign = sign;
            } else {
                currentlength = 2;
                currentstart = i;
                previoussign = sign;
                
            }
            
            if (currentlength > maxlength) {
                maxlength = currentlength;
                maxstart = currentstart;
                
            }
        }
    }
    
    cout << "Длина подотрезка: " << maxlength << endl;
    cout << "Левая граница: " << maxstart << endl;
    
    return 0;
    
}


//#ifdef task_1
int main() {
    int n;
    
    cout << "Введите количество символов, что находится в вашем массиве" << endl;
    
    cin >> n;
    
    int arr[50];
    
    cout << "Введите " << n << " целые числа: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
        
    }
    
    int positive[30];
    int negative[30];
    int poscount = 0;
    int negcount = 0;
    
    for (int i = 0; i < n; i++) {
        if (arr[i] > 0) {
            positive[poscount] = arr[i];
            poscount++;
        } else if (arr[i] < 0) {
            negative[negcount] = arr[i];
            negcount++;
        }
        
    }
    
    cout << "Положительные числа: ";
    for (int i = 0; i < poscount; i++) {
        cout << positive[i] << " ";
        
    }
    
    cout << endl;
    
    cout << "Отрицательные числа: ";
    for (int i = 0; i < negcount; i++) {
        cout << negative[i] << " ";
        
    }
    
    cout << endl;
    
    return 0;
    
}
    

#include <iostream>
using namespace std;

//#ifdef task_2
int main() {
    int n;
    
    cout << "Введите количество чисел, что находится в массиве" << endl;
    
    cin >> n;
    
    int arr[50];
    
    cout << "Введите " << n << " целые числа" << endl;
    
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }
    
    bool found = false;
    
    for (int i = 0; i < n - 1; i++) {
        if (arr[i] > 0 && arr[i + 1] > 0) {
            cout << "Найдены соседние элементы с одинаковыми знаками" << endl;
            cout << "Индексы: " << i << " и " << i + 1 << endl;
            cout << "Элементы: " << arr[i] << " и " << arr[i + 1] << endl;
            
            found = true;
            
        }
        
        else if (arr[i] < 0 && arr[i + 1] < 0) {
            cout << "Найдены соседние элементы с одинаковыми знаками" << endl;
            cout << "Индексы: " << i << " и " << i + 1 << endl;
            cout << "Элементы: " << arr[i] << " и " << arr[i + 1] << endl;
            
            found = true;
            break;
            
        }
            
    } 
    
    if (!found) {
        cout << "Не найдены соседние элементы с такими знаками" << endl;
        
    }
        
        return 0;
        
}
    
